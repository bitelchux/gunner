    twitterUrl = encodeURIComponent("http://datenshizero.github.io/gunner")
    twitterText = encodeURIComponent("Play Gunner, a WWII themed HTML5 game where you destroy waves of enemy planes and ships")
    if win
      twitterText = encodeURIComponent("I beat the #{@GAME_LENGTH_TEXT[@game.lengthMultplier]} #{@game.gameType} mode of Gunner in #{@timeDisplay(@gameTimer.ms)}. Try beating my time at")
    else if @game.gameType is 'Survival'
      twitterText = encodeURIComponent("I destroyed #{@kills} enemies in the #{@GAME_LENGTH_TEXT[@game.lengthMultplier]} #{@game.gameType} mode of Gunner before dying. Try beating my score at")

    twitter.inputEnabled = true
    twitter.events.onInputDown.add( ->
      win = window.open("https://twitter.com/intent/tweet?url=#{twitterUrl}&text=#{twitterText}", '_blank')
