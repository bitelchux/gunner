    @gameEnd = true

    if @game.gameType is 'Time Attack'
      @gameTimer.pause()
    else
      @drainCounter.destroy()
      @drainText.destroy()
      @timeText.text = ''

    @createPopupOverlay()

    @add.text(400, 150, (if win then "YOU WIN" else "GAME OVER"),
      { font: '72px Army Wide', fill: '#fff' }
    ).anchor.setTo(0.5, 0.5)
    #@add.text(400, 225, "New Best Time!",
