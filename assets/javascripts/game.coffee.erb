    @addInstructionText 'Triple (W) - use 3 turrets but fire rate is halved', 40, 155
    @addInstructionText 'Bomb   (E) - slowest fire rate, drop a bomb that explodes ', 40, 180
    @addInstructionText '             into 10 shots aftera short delay', 40, 205

    @addInstructionText 'You regain energy by destroying enemies. ', 40, 245
    @addInstructionText 'Tougher enemies give more energy, but still count as 1 kill.', 40, 270
    @addInstructionText 'When your energy reaches 0, it\'s game over.', 40, 295
 
    @addInstructionText 'This game has 2 modes: ', 40, 355

    @addInstructionText 'Time Attack - try to finish the game as soon as possible ', 40, 395
    @addInstructionText 'Survival    - try to destroy as many enemies as you can ', 40, 420
    @addInstructionText '              before you run out of energy.', 40, 445

    @addText 'Previous Page', 400, 500, true
    @addText 'Back to Main Menu', 400, 550, false

  displayTutorial: ->
    text.destroy() for key, text of @menuTexts
    @titleText.visible = false
    if @game.gameType is 'Time Attack'
      @addText '  Time Attack  ', 400, 100, true

