      { font: '28px Army Wide', fill: '#fff' }
    )
    mainMenu.anchor.setTo(0.5, 0.5)
    mainMenu.inputEnabled = true
    mainMenu.events.onInputDown.add( ->
      @quitGame()
    , this)

    twitter = @add.text(400, 400, "Share this on Twitter",
      { font: '24px Army Wide', fill: '#55ACEE' }
