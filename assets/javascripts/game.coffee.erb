class MainMenu
  create: ->
    @stage.backgroundColor = '#2d2d2d'
    @titleText = @add.text(400, 150, "Gunner", { font: '128px "Army Wide", monospace', fill: '#fff' })
    @titleText.anchor.setTo(0.5, 0.5)

    gl = Store.get('gameLength')
    @game.lengthMultplier = if gl? then parseInt(gl) else 2
    gt = Store.get('gameType')
    @game.gameType = if gt? then gt else 'Time Attack'

    @menuTexts = {}
    @setupTopLevel()


  addText: (text, x, y, selected, small) ->
    @menuTexts[text] = @add.text(x, y, text,
      {
        font: "#{ if small then 26 else 32 }px 'Army Wide', monospace",
        fill: (if selected then '#fff' else '#888')
      })
    @menuTexts[text].anchor.setTo(0.5, 0.5)
    @menuTexts[text].inputEnabled = true
    @menuTexts[text].events.onInputDown.add(@menuSelect, @menuTexts[text])

  addInstructionText: (text, x, y, header) ->
    @menuTexts[text] = @add.text(x, y, text,
      {
        font: "#{ if header then 32 else 20 }px monospace",
        fill: '#fff'
      })
    @menuTexts[text].anchor.setTo((if header then 0.5 else 0), 0.5)
    return @menuTexts[text]

  addTutorialText: (text, x, y, header) ->
    @menuTexts[text] = @add.text(x, y, text,
      {
        font: "#{ if header then 32 else 20 }px monospace",
        fill: '#fff'
      })
    @menuTexts[text].anchor.setTo(0.5, 0.5)
    return @menuTexts[text]

  addCreditsText: (text, y) ->
    @menuTexts[text] = @add.text(400, y, text,
      {
        font: "26px monospace",
        fill: '#fff'
      })
    @menuTexts[text].anchor.setTo(0.5, 0.5)
    return @menuTexts[text]

  menuSelect: ->
    state = @game.state.getCurrentState()
    switch @text
      when "Back to Main Menu"
        state.titleText.visible = true
        state.setupTopLevel()
      when "Play Game"
        state.setupOptions()
      when "Time Attack"
        @game.gameType = 'Time Attack'
        state.highlightType()
      when "Survival"
        @game.gameType = 'Survival'
        state.highlightType()
      when "Quick"
        @game.lengthMultplier = 5
        state.highlightLength()
      when "Normal"
        @game.lengthMultplier = 2
        state.highlightLength()
      when "Extended"
        @game.lengthMultplier = 1
        state.highlightLength()
      when "Start Game"
        @game.lengthMultplier = 2 unless @game.lengthMultplier?
        Store.set('gameLength', @game.lengthMultplier)
        @game.gameType = 'time atttack' unless @game.gameType?
        Store.set('gameType', @game.gameType)
        if Store.get('skipTutorial')?
          @game.state.start('Game')
        else
          state.displayTutorial()
      when "Skip this screen from now on"
        Store.set('skipTutorial', 'skip')
        @game.state.start('Game')
      when "Proceed to Game"
        @game.state.start('Game')
      when "How To Play"
        state.displayInstructions()
      when "Previous Page"
        state.displayInstructions()
      when "Next Page"
        state.displayInstructions2()
      when "High Scores"
        state.displayHighScores()
      when "Credits & Misc"
        state.displayCredits()

  setupTopLevel: ->
    text.destroy() for key, text of @menuTexts
    @addText 'Play Game', 400, 350, true
    @addText 'How To Play', 400, 390, false
    @addText 'High Scores', 400, 430, false
    @addText 'Credits & Misc', 400, 470, false
    @game.menuIndex = 0

  setupOptions: ->
    text.destroy() for key, text of @menuTexts

    @addText 'Game Type', 230, 300, true
    @addText 'Time Attack', 230, 350, false, true
    @addText 'Survival', 230, 380, false, true
    @addText 'Game Length', 570, 300, true
    @addText 'Quick', 570, 340, false, true
    @addText 'Normal', 570, 370, false, true
    @addText 'Extended', 570, 400, false, true
    @highlightLength()
    @highlightType()
    @addText 'Start Game', 400, 470, true
    @addText 'Back to Main Menu', 400, 510, false, true

  highlightType: ->
    @menuTexts["Time Attack"].fill = "#888"
    @menuTexts["Survival"].fill = "#888"
    switch @game.gameType
      when 'Time Attack'
        @menuTexts["Time Attack"].fill = "#fff"
      when 'Survival'
        @menuTexts["Survival"].fill = "#fff"

  highlightLength: ->
    @menuTexts["Quick"].fill = "#888"
    @menuTexts["Normal"].fill = "#888"
    @menuTexts["Extended"].fill = "#888"
    switch @game.lengthMultplier
      when 5
        @menuTexts["Quick"].fill = "#fff"
      when 2
        @menuTexts["Normal"].fill = "#fff"
      when 1
        @menuTexts["Extended"].fill = "#fff"

  displayInstructions: ->
    text.destroy() for key, text of @menuTexts
    @titleText.visible = false
    @addInstructionText 'How To Play', 400, 50, true

    @addInstructionText 'Shoot by clicking/tapping on the spot you wish to fire at.', 40, 90
    @addInstructionText 'Hold down click/tap for continuous fire. You can also use', 40, 115
    @addInstructionText 'the arrow keys to move the crosshair and Space Bar to fire.', 40, 140
 
    @addInstructionText 'You can select the shot type and firing modes by clicking/', 40, 180
    @addInstructionText 'tapping the modes at the bottom of the screen. ', 40, 205

    @addInstructionText 'There are 3 shot types:', 40, 245

    @addInstructionText 'Small - fast firing, good for spraying weak enemies.', 40, 285
    @addInstructionText '        1 energy per shot. Keyboard shortcut: "1"', 40, 310
    @addInstructionText 'Large - slower rate, but better against tougher enemies. ', 40, 335
    @addInstructionText '        3 energy per shot. Shortcut: "2"', 40, 360
    @addInstructionText 'Burst - slow strong shot that bursts into 5 shots after ', 40, 385
    @addInstructionText '        hitting. 8 energy per shot. Shortcut: "3"', 40, 410

    @addText 'Next Page', 400, 500, true
    @addText 'Back to Main Menu', 400, 550, false

  displayInstructions2: ->
    text.destroy() for key, text of @menuTexts
    @titleText.visible = false
    @addInstructionText 'How To Play', 400, 50, true

    @addInstructionText 'There are 3 firing modes:', 40, 90

